<?xml version="1.0"?>
<s:WindowedApplication title="Taskbar Progress Example" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" width="500" height="80">
    <fx:Script>
        <![CDATA[
            import by.frank.taskbar.progress.managers.TaskBarProgressManager;


            private var manager:TaskBarProgressManager = new TaskBarProgressManager();

            private function setState(state:int):void
            {
                manager.setProgressState(state);
            }

            private function hsProgress_changeHandler(event:Event):void
            {
                manager.setProgress(hsProgress.value, 99);
            }
        ]]>
    </fx:Script>

    <s:layout>
        <s:VerticalLayout paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10"/>
    </s:layout>

    <s:HSlider id="hsProgress" minimum="0" maximum="99" stepSize="1" width="100%" change="hsProgress_changeHandler(event)"/>

    <s:HGroup width="100%" horizontalAlign="center">
        <s:Button id="btnIndeterminate" label="Indeterminate" click="setState(1)"/>
        <s:Button id="btnINormal" label="Normal" click="setState(2)"/>
        <s:Button id="btnError" label="Error" click="setState(3)"/>
        <s:Button id="btnPaused" label="Paused" click="setState(4)"/>
        <s:Button id="btnNoProgress" label="No Progress" click="setState(0)"/>
    </s:HGroup>
</s:WindowedApplication>
